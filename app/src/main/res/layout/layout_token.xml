<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctlToken"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.suongvong.interviewtest.widget.swipe.SwipeMenuLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/ctlTokenItem"
        app:leftMenuView="@+id/lnLeftToRight"
        app:rightMenuView="@+id/lnRightToLeft">

        <include
            android:id="@+id/ctlTokenItem"
            layout="@layout/item_token_layout" />

        <LinearLayout
            android:id="@+id/lnRightToLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnDelete"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivDelete"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_status"
                    android:padding="10dp"
                    android:src="@drawable/ic_delete" />
            </LinearLayout>


        </LinearLayout>
    </com.suongvong.interviewtest.widget.swipe.SwipeMenuLayout>


</LinearLayout>